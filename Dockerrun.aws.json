{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"jalakpatoliya/multi-client",
            "hostname":"client",
            "essential":false
        },
        {
            "name":"api",
            "image":"jalakpatoliya/multi-server",
            "hostname":"api",
            "essential":false
        },
        {
            "name":"worker",
            "image":"jalakpatoliya/multi-worker",
            "hostname":"worker",
            "essential":false
        },
        {
            "name":"nginx",
            "image":"jalakpatoliya/multi-nginx",
            "hostname":"nginx",
            "essential":true,
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links":["server","client"]
        }
    ]
}